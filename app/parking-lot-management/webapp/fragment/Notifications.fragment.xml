<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    class="sapUiBodyBackground"
>
    <Popover
    id="notifications"
        class="customPopoverContent"
        placement="PreferredLeftOrFlip"
    >
        <customHeader>
            <Bar class="notify">
                <contentLeft>
                    <Text text="Notification" />
                </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="oncancelbtn"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>

        <NotificationList class="notify">
            <layoutData>
                <FlexItemData
                    maxWidth="800px"
                    maxHeight="100px"
                />
            </layoutData>
            <NotificationListGroup
                id="Notification1"
                title="Booking request"
                showCloseButton="false"
                close="onItemClose"
                items="{path: '/Notification', parameters:{ $count : true}}"
                press="onListItemPress"
            >
                <buttons>
                    <Button
                        text="Accept All"
                        press="onAcceptPress1"
                    />
                </buttons>

                <NotificationListItem
                    title="Vender Name :- "
                    description="Hi! Book the Slot For this date and time "
                    highlightText=""
                    showCloseButton="true"
                    datetime=""
                    unread="true"
                    priority="Low"
                    close="onItemClose1"
                    press=".onListItemPress"
                    authorInitials=""
                    authorAvatarColor="Random"
                    class="notify"
                />
            </NotificationListGroup>
        </NotificationList>
    </Popover>
</core:FragmentDefinition>
